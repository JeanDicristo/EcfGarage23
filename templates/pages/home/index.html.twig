{% extends 'base.html.twig' %}

{% block title %}Garage V.Parrot
{% endblock %}

{% block body %}
	
	<div class="container">
	<h2>Les service proposé</h2>
		{% for service in services %}
			<div class="card card-service">
				<h2>{{ service.name }}</h2>
				<p>{{ service.description }}</p>
				<span>{{ service.price }}
					€</span>
			</div>
		{% endfor %}
	</div>
	<section class="flyers-sec">
		<img src="{{ asset('images/basic-wash.png') }}" alt="Mon image de lavage auto" width="400px" class="flyer">
		<img src="{{ asset('images/basic-wash.png') }}" alt="Mon image de lavage auto" width="400px" class="flyer">
		<img src="{{ asset('images/basic-wash.png') }}" alt="Mon image de lavage auto" width="400px" class="flyer">
	</section>

	<section class="commentaire">
		<h3>Commentaire clients</h3>
		<a href="{{ path('testimony')}}" class="btn">Laisser un avis</a>
		<div id="carouselExample" class="carousel slide">
			<div class="carousel-inner">
				{% for index, testimony in testimonys %}
					<div class="carousel-item {% if index == 0 %}active{% endif %}">
						<div class="card card-carousel">
							<h2>{{ testimony.name }}</h2>
							<p>{{ testimony.commentaire }}</p>
							<div class="rating">
								{% for i in 1..testimony.note %}
									<i class="fas fa-star"></i>
								{% endfor %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
					<img src="{{asset('images/left-arrow.png')}}" alt=""class="carousel-control-prev-icon" width="30px" aria-hidden="true">
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
					<img src="{{asset('images/right-arrow.png')}}" alt=""class="carousel-control-prev-icon" width="30px" aria-hidden="true">
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</section>


